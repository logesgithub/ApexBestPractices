showto() {
        sendEmail({ toAddress: this.toEmail, subject: this.ApplicationRec, body: this.message, recordId: this.ApplicationRec })
            .then(() => {
                // Show success toast notification
                this.showToast('Success', 'Email sent successfully', 'success');
                // Clear input fields
              //  this.clearFields();
                this.hideModalBox();
                this.SendMessages();
                this.SendMessageTemplate = true;
            })
            .catch(error => {
                // Show error toast notification
                this.showToast('Error', 'Failed to send email', 'error');
                console.error(error);
            });
    }
